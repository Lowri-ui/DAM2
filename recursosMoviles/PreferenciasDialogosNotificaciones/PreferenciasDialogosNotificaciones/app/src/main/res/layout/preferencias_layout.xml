<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".PreferenciasActivity">

    <Button
        android:id="@+id/btnAbrirPreferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Abrir Panel de Preferencias" />

    <Button
        android:id="@+id/btnMostrarPreferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mostrar Preferencias Guardadas" />

    <TextView
        android:id="@+id/textViewResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:background="#EFEFEF"
        android:text="Los valores guardados aparecerán aquí."
        android:textSize="16sp"/>

</LinearLayout>
